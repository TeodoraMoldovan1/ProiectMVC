@model Categorie

<form method="post">
    <input asp-for="IDCategorie" hidden />
    <div>
        <h1 class="text-primary"> Editarea unei categorii</h1>
    </div>

    <div class="mb-3 row p-0">
        <label asp-for="DenumireCategorie" class="p-0">Modifica denumirea</label>
        <input asp-for="DenumireCategorie" class="form-control" />
        @* <span asp-validation-for="DenumireCategorie" class="text-danger"></span> *@
    </div>
    @*<div asp-validation-summary="Model-Only"></div>*@

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Modificare</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Categorie" asp-action="Index" class="btn btn-secondary border form-control">Inapoi </a>
        </div>
    </div>
</form>

